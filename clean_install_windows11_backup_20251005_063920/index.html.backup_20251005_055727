    <script>
        // Check backend connectivity
        async function checkBackends() {
            try {
                const mainResponse = await fetch('http://localhost:8002/');
                const mlResponse = await fetch('http://localhost:8004/health');
                
                if (!mainResponse.ok || !mlResponse.ok) {
                    console.warn('Some backends may not be fully initialized yet');
                }
            } catch (error) {
                console.error('Backend check error:', error);
                // Show warning if backends aren't running
                setTimeout(() => {
                    if (!window.backendWarningShown) {
                        window.backendWarningShown = true;
                        alert('Please ensure both backend servers are running:\n1. python backend.py (port 8002)\n2. python backend_ml_enhanced.py (port 8004)');
                    }
                }, 3000);
            }
        }
        
        // Check backends on load
        window.addEventListener('load', checkBackends);
        
        // Version check
        console.log('Stock Tracker Pro v7.0 - Windows 11 Edition');
        console.log('Real ML models integrated from GSMT-Ver-813');
        console.log('All modules use real Yahoo Finance data');
    </script>
